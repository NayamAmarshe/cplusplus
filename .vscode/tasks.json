{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Compile and run",
      "type": "shell",
      "command": "",
      "args": [
        "g++",
        "${relativeFile}",
        "-o",
        ".vscode/out",
        "&&",
        ".vscode/out",
        "<",
        "input.txt",
        ">",
        "output.txt",
        // "&&",
        // "rm",
        // "test.exe",
        // // "&&",
        // // "test.out"

      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": {
        "owner": "cpp",
        "fileLocation": ["relative", "${workspaceRoot}"],
        "pattern": {
          "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
          "file": 1,
          "line": 2,
          "column": 3,
          "severity": 4,
          "message": 5
        }
      },
      "presentation": {
        "reveal": "silent",
        "clear": true
      }
    }
  ]
}